{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",    
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules"
  ],    
}
